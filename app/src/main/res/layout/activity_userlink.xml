<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="left"
        android:orientation="vertical"
        android:id="@+id/accessory_linear1"
        android:background="#0099cc"
        android:layout_width="match_parent"
        android:layout_height="40sp">
        <TextView
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/head_center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="config wifi"
            android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/morebackbtn"
            android:background="@drawable/back_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:paddingTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textSize="18sp"
            android:id="@+id/et_ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ssid"
            android:singleLine="true"/>
        <ImageView
            android:id="@+id/btn_search"
            android:background="@drawable/search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/et_ssid"
            android:onClick="onClick"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <EditText
            android:textSize="18sp"
            android:id="@+id/et_pasd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:singleLine="true"
            android:layout_weight="1"/>
        <EditText
            android:textSize="18sp"
            android:id="@+id/et_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="49000"
            android:hint="port"
            android:singleLine="true"
            android:maxLength="5"
            android:layout_weight="2"
            android:inputType="number"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ok"
        android:onClick="onClick"/>
</LinearLayout>
